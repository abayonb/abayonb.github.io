<div style="{{containerStyle}}">
  <div class="touchable option-image" data-testid="leisure-{{id}}" id="leisure-{{id}}" role="button">
    <div class="motion expand ripple bgTouchable pointerNone"
         style="opacity: 0; transition-property: opacity;"></div>
    <div class="thumbnail positionRelative" id="thumbnail-{{id}}" style="height: 158.125px; width: 126.5px;">
      {{> lazy-image id=(concat "quiz-question-" id) classes="thumbnail displayFlex" 	width="155" height="194" simpleLoad="true"}}
      <div id="motion-leisure-{{id}}"
          class="motion delay expand thumbnail alignItemsCenter bgOverlay displayFlex justifyContentCenter layerXS pointerNone positionAbsolute"
          style="height: 158.125px; width: 126.5px; opacity: 0; transition-property: opacity;">
        <div class="motion timing-spring expand"
             style="transform: scale(0); opacity: 0; transition-property: transform, opacity;">
          <i class="icon auroraicons hourglass colorGrayscaleL" aria-hidden="true"></i>
        </div>
      </div>
    </div>
    <span class="text body level-3 hidden">{{question}}</span>
    <input class="radio displayNone" name="{{question}}" type="radio" value="{{value}}" />
    <div
        class="selected-border motion timing-spring collapse option-image__overlay alignItemsCenter displayFlex
        flexDirectionColumn justifyContentCenter layerXS positionAbsolute"
        style="box-shadow: none; transition-property: box-shadow;"></div>
  </div>
</div>
